<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.northwestern.habits.datagathering" >

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="com.microsoft.band.service.access.BIND_BAND_SERVICE" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DeviceManagementActivity">
        </activity>
        <activity android:name=".ManageConnectionActivity" >
        </activity>
        <activity android:name=".ManageBandConnection"
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>

        <service
            android:name=".BandDataService"
            android:enabled="true"
            android:exported="false"
            android:label="Band Data Service"
            android:process=":BandData" >
        </service>

    </application>

</manifest>
