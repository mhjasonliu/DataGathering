<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Request new subject ID?"
        android:id="@+id/title_text"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="\nThis should be done when you start collecting data for a new user or the user starts a new session."
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_weight=".5" >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:id="@+id/request_id_progress"
            android:layout_gravity="center_horizontal"
            android:max="100"
            android:progress="50"
            android:indeterminate="false"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Requesting new subject ID..."
            android:id="@+id/requesting_id_text"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".5">

        <Button
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="Request ID"
            android:id="@+id/request_id_button"
            android:layout_gravity="bottom"
            android:layout_weight="1"/>

        <Space
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"/>

        <Button
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:id="@+id/continue_button"
            android:layout_gravity="bottom"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>