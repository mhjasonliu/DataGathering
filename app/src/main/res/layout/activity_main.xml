<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:text="Welcome to HAbits data gathering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeMessage"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:text="Please connect to a device"
        android:id="@+id/welcomePrompt"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Manage Devices"
        android:id="@+id/manageDevicesButton"
        android:onClick="manageDevicesClicked"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DISPLAY DATABASE"
        android:id="@+id/displayDbButton"
        android:onClick="onReadDatabase"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Database"
        android:id="@+id/deleteDbButton"
        android:onClick="onDeleteDatabase"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/connectionListHeader"
        android:text="Connection log:"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="25dp"
        android:id="@+id/connectionLog"
        android:text="No connections"/>



</LinearLayout>
