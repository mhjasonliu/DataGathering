<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.northwestern.habits.datagathering.userinterface.fragments.PasswordFragment"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you would like to reset the admin password, you may do so here."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"/>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/old_password_field"
            android:inputType="numberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Old password"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal|bottom"/>

        <EditText
            android:id="@+id/new_password_field"
            android:inputType="numberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="New password"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal|bottom"/>

        <EditText
            android:id="@+id/confirm_password_field"
            android:inputType="numberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Confirm new password"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="bottom"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="44dp"
            android:src="@drawable/btn_check_off_disable"
            android:layout_row="0"
            android:layout_column="2"
            android:id="@+id/old_password_check_image"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="44dp"
            android:src="@drawable/btn_check_off_disable"
            android:layout_row="2"
            android:layout_column="2"
            android:id="@+id/comparison_check_image"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="44dp"
            android:src="@drawable/btn_check_off_disable"
            android:layout_row="1"
            android:layout_column="2"
            android:visibility="invisible"/>
    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change password"
        android:id="@+id/button_change_password"
        android:layout_gravity="right"
        android:visibility="invisible" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Space
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_weight="2"/>
        <Button
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="Finish"
            android:id="@+id/button_finish_advanced"
            android:layout_gravity="right"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
