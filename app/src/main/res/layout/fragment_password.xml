<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.northwestern.habits.datagathering.userinterface.fragments.PasswordFragment">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you would like to reset the admin password, you may do so here."
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill">

        <EditText
            android:id="@+id/old_password_field"
            android:inputType="numberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Old password"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="bottom"/>

        <EditText
            android:id="@+id/new_password_field"
            android:inputType="numberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="New password"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="bottom"/>

        <EditText
            android:id="@+id/confirm_password_field"
            android:inputType="numberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Confirm new password"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="bottom"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_check_off_disable"
            android:layout_row="0"
            android:layout_column="2" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_row="3"
            android:layout_column="0" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_check_off_disable"
            android:layout_row="2"
            android:layout_column="2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_check_off_disable"
            android:layout_row="1"
            android:layout_column="2" />
    </GridLayout>


</LinearLayout>
