<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.northwestern.habits.datagathering.userinterface.fragments.PasswordFragment"
    android:weightSum="1"
    android:clickable="true"
    android:focusableInTouchMode="true">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Update Password?"
        android:id="@+id/textView7"
        android:layout_gravity="center"
        android:paddingTop="@dimen/activity_vertical_margin"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="If you would like to reset the admin password, you may do so here."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:textAlignment="center"
        android:layout_gravity="center"/>


    <Space
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_weight=".2"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/old_password_field"
            android:inputType="numberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Old password"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal|bottom"/>

        <EditText
            android:id="@+id/new_password_field"
            android:inputType="numberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="New password"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal|bottom"/>

        <EditText
            android:id="@+id/confirm_password_field"
            android:inputType="numberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Confirm new password"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="bottom"/>

        <CheckBox
            android:layout_width="35dp"
            android:layout_height="44dp"
            android:layout_row="0"
            android:layout_column="2"
            android:id="@+id/old_password_checkbox"
            android:enabled="false"
            android:layout_gravity="bottom"/>

        <CheckBox
            android:layout_width="35dp"
            android:layout_height="44dp"
            android:layout_row="2"
            android:layout_column="2"
            android:id="@+id/comparison_checkbox"
            android:enabled="false"/>

        <CheckBox
            android:layout_width="35dp"
            android:layout_height="44dp"
            android:enabled="false"
            android:layout_row="1"
            android:layout_column="2"
            android:visibility="invisible"
            android:layout_gravity="bottom"/>
    </GridLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".6" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:layout_width="0px"
            android:layout_marginLeft="0dp"
            android:layout_height="wrap_content"
            android:text="Update password"
            android:id="@+id/button_change_password"
            android:textAlignment="center"
            android:layout_gravity="left"
            android:enabled="false"
            android:layout_weight="1"/>

        <Space
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_weight=".8"/>

        <Button
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:text="Finish"
            android:id="@+id/button_finish_advanced"
            android:layout_gravity="right"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
